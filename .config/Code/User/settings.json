{
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "[html]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },  


    "html.suggest.html5": true,
    "rainbowTags.hightlightType": "color",
    "auto-close-tag.enableAutoCloseTag": true,
    "auto-close-tag.enableAutoCloseSelfClosingTag": true,
    "auto-close-tag.SublimeText3Mode": true,
    "editor.autoClosingOvertype": "always",
    "auto-close-tag.fullMode": true,
    "html.format.indentInnerHtml": true,
    //Auto Rename tags
    "auto-rename-tag.activationOnLanguage": [
        "html",
        "xml",
        "php",
        "javascript"
    ],
    //BrackerPair
    "bracketPairColorizer.forceUniqueOpeningColor": true,
    "bracketPairColorizer.showBracketsInGutter": true,
    "bracketPairColorizer.colorMode": "Consecutive",
    "bracketPairColorizer.activeScopeCSS": [
        "borderStyle : solid",
        "borderWidth : 1px",
        "borderColor : {color}; opacity: 0.5"
    ],
    //Desactivar el de vscode para que funcione la anterior
    "editor.matchBrackets": "never",
    //css
    "css.lint.boxModel": "warning",
    "css.lint.float": "warning",
    "css.lint.idSelector": "warning",
    //Formato
    "editor.formatOnPaste": true,
    //Save
    "workbench.editor.highlightModifiedTabs": true,
    "files.autoSave": "afterDelay",
    "files.trimFinalNewlines": true, //Borra lineas extra al final
    //Suggestion
    //"editor.acceptSuggestionOnEnter": "off",
    //General
    "editor.multiCursorModifier": "alt",
    "editor.detectIndentation": true,
    "editor.quickSuggestionsDelay": 0,
    //Fonts
    "editor.fontFamily": "Fira Code, 'monospace', Consolas, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "window.titleBarStyle": "custom",
    "codestream.email": "culturaonlinenw@gmail.com",
    "breadcrumbs.enabled": true,
    "window.zoomLevel": 0,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.pythonPath": "/usr/bin/python3.8",
    //"macros": {
    //  "copy": ["editor.action.clipboardCopyAction", "extension.vim_ctrl+c"]
    //},
  
    //Plugin todo-tree
    "todo-tree.tree.showScanModeButton": false,
    // Vim like
    "editor.lineNumbers": "relative",
    //Vim
    "vim.useCtrlKeys": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.enableNeovim": true,
    //easy-motion
    "vim.easymotion": true,
    "vim.easymotionKeys": "hklyuiopnm,qwertzxcvbasdgjf;",
    "vim.easymotionJumpToAnywhereRegex": "\\b[A-Za-z0-9]|[A-Za-z0-9]\\b|_.|#.|[a-z][A-Z]",
    "vim.statusBarColorControl": true,
    "vim.sneak": true,
    "vim.surround": true,
    //"vscode-neovim.neovimInitPath": "~/.config/nvim/init.vim",
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
    "vim.autoindent": true,
    "vim.camelCaseMotion.enable": true,
    "vim.showcmd": true,
    "vim.leader": "\\",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                " "
            ],
            "after": [
                "leader",
                "leader",
                "leader",
                "b",
                "d",
                "w"
            ]
        }
    ],
    "vim.handleKeys": {
        "<C-n>": false,
        "<C-k>": false,
        "<C-w>": false
    },
    //Add by vim pluggin. Always change 
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.idea": true,
        "**/.env": true,
        "**/.vscode": true

    },
    "[javascript]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "extensions.ignoreRecommendations": true,
    "jupyter.sendSelectionToInteractiveWindow": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "workbench.editor.showTabs": true
}